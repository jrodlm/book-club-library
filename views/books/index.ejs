<link rel="stylesheet" href="/styles.css" />
<%- include('../partials/_navbar.ejs') %>

<h2>Books in Your Club Library</h2>

<div class="card-container">
  <% books.forEach(book => { %>
    <div class="card">
      <strong><%= book.title %></strong> 
      <p>by <%= book.author %></p>
      <p>Discussion Date: <%= new Date(book.discussionDate[0]).toLocaleDateString() %></p>

      <% if (user.role === 'admin') { %>
        <a href="/books/<%= book._id %>/edit">Edit</a><br>
        <a href="/books/<%= book._id %>/show">View Details</a>
      <% } else { %>
        <a href="/books/<%= book._id %>/show">View Details</a>
      <% } %>
    </div>
  <% }) %>
</div>
